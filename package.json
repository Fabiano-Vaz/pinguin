{
  "name": "pinguin-pet",
  "displayName": "Pinguim Pet",
  "description": "Um pinguim animado que anda no VS Code enquanto o editor estiver aberto.",
  "version": "1.0.0",
  "publisher": "Pingocode",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:pinguin.openPet",
    "onView:pinguinPet.sidebar"
  ],
  "contributes": {
    "commands": [
      {
        "command": "pinguin.openPet",
        "title": "Pinguim: Mostrar no Explorador"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "pinguinPet.sidebar",
          "name": "Pinguim Pet",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Pinguim Pet",
      "properties": {
        "pinguin.autoOpenOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Abre automaticamente o painel do pinguim ao iniciar o VS Code."
        }
      }
    }
  },
  "scripts": {
    "dev": "vite",
    "build:web": "vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "phaser": "^3.90.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "typescript": "^5.8.2",
    "vite": "^6.3.5"
  }
}
