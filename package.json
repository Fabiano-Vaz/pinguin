{
  "name": "pinguin-pet",
  "displayName": "Pinguim Pet",
  "description": "Um pinguim animado que anda no VS Code enquanto o editor estiver aberto.",
  "version": "1.0.0",
  "publisher": "Pingocode",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:pinguin.openPet",
    "onView:pinguinPet.sidebar"
  ],
  "scripts": {
    "dev": "vite",
    "build:extension": "tsc -p tsconfig.json",
    "build:webview": "vite build",
    "build": "npm run build:extension && npm run build:webview",
    "package:vsix": "npm run build && vsce package -o release/pinguin-pet-${npm_package_version}.vsix",
    "lint:extension": "tsc -p tsconfig.json --noEmit",
    "lint:webview": "npm run test",
    "lint": "npm run lint:extension && npm run lint:webview",
    "test": "node --experimental-strip-types tests/run-tests.ts",
    "test:core": "node --experimental-strip-types tests/penguin-core.test.ts"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.6.1",
    "@types/node": "^22.13.10",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.8.2",
    "vite": "^6.2.2"
  },
  "contributes": {
    "commands": [
      {
        "command": "pinguin.openPet",
        "title": "Pinguim: Mostrar no Explorador"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "pinguinPet.sidebar",
          "name": "Pinguim Pet",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Pinguim Pet",
      "properties": {
        "pinguin.autoOpenOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Abre automaticamente o painel do pinguim ao iniciar o VS Code."
        }
      }
    }
  }
}
